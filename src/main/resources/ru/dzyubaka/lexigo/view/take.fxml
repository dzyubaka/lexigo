<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.dzyubaka.lexigo.controller.TakeController" alignment="CENTER">
    <Region VBox.vgrow="ALWAYS"/>
    <Text fx:id="text" VBox.vgrow="ALWAYS"/>
    <Region VBox.vgrow="ALWAYS"/>
    <TextField fx:id="textField" VBox.vgrow="ALWAYS" alignment="CENTER" onAction="#next"/>
    <Region VBox.vgrow="ALWAYS"/>
    <Button VBox.vgrow="ALWAYS" text="Next" onAction="#next"/>
    <Region VBox.vgrow="ALWAYS"/>
</VBox>
